<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/itau_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/logo_itau"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/acspike"
        android:layout_below="@+id/itau_logo"/>

    <TextView
        android:id="@+id/numero_agencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1500"
        android:layout_alignBottom="@+id/user_image"
        android:layout_toRightOf="@+id/user_image"
        android:layout_toEndOf="@+id/user_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome_cliente"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Fulano da Silva"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/itau_logo"
        android:layout_toRightOf="@+id/itau_logo"
        android:layout_toEndOf="@+id/itau_logo" />

    <TextView
        android:id="@+id/numero_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08945-8"
        android:layout_alignBaseline="@+id/numero_agencia"
        android:layout_alignBottom="@+id/numero_agencia"
        android:layout_alignRight="@+id/nome_cliente"
        android:layout_alignEnd="@+id/nome_cliente" />



</RelativeLayout>
